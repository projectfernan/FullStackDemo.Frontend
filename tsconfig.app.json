{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": "./src",  // Make sure this points to the 'src' directory
    "paths": {
      "@RegularButtonContext/*": ["context/components/common/buttons/RegularButtonContext"],
      "@IRegularButtonProps/*": ["types/components/common/buttons/IRegularButtonProps"],
      "@RegularButton/*": ["components/common/buttons/RegularButton"],
      "@IContentModalProps/*": ["types/components/common/IContentModalProps"],
      "@ContentModal/*": ["components/common/modals/ContentModal"],
      "@ContentModalContext/*": ["context/components/common/modals/ContentModalContext"],
      "@IApiBodyResponse/*": ["types/common/IApiBodyResponse"],
      "@ApiConstants/*": ["enums/ApiConstants"],
      "@AxiosBasicAuth/*": ["utils/AxiosBasicAuth"],
      "@AxiosBearer/*": ["utils/AxiosBearer"],
      "@AuthenticationService/*": ["services/AuthenticationService"],
      "@MobileSuitsService/*": ["services/pages/MobileSuitsService"],
      "@IMobileSuits/*": ["types/pages/MobileSuits/*"],
      "@PaginatedTable/*": ["components/common/tables/PaginatedTable"],
      "@FormatDateTime/*": ["utils/DateHelper"],
    },
  },
  "include": ["src"]
}
